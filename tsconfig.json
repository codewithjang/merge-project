{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "commonjs",       
    "target": "esnext",
    "types": ["node", "jest"],    
    "lib": ["esnext"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "moduleDetection": "auto"
  },
  "include": ["src"]
}
